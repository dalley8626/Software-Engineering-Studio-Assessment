<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataPacketActivity">

    <CheckBox
        android:id="@+id/heartRateCB"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView3"
        android:layout_marginBottom="229dp"
        android:text="Heart Rate" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Below are the information that will be sent to your doctor." />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="235dp"
        android:text="Before ticking Heart Rate, you must go to Heart Rate and measure it first." />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="343dp"
        android:layout_height="32dp"
        android:layout_below="@+id/heartRateCB"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-229dp"
        android:text="Include any other relevent medical data in the field below." />

    <EditText
        android:id="@+id/medicalDataET"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/nameTV"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:text="Name"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textview5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/heartRateCB"
        android:layout_marginTop="92dp"
        android:text="Gender: "
        android:textSize="12sp" />

    <TextView
        android:id="@+id/heightTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/nameTV"
        android:layout_marginTop="125dp"
        android:text="Height"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/weightET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignStart="@+id/heightTV"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="Weight"
        android:textSize="12sp" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="55dp"
        android:layout_marginStart="38dp"
        android:text="Save" />

    <Button
        android:id="@+id/sendBtn"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/saveBtn"
        android:layout_marginEnd="38dp"
        android:onClick="sendPacket"
        android:text="Save and Send" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/heartRateCB"
        android:layout_marginTop="161dp"
        android:text="Weight: " />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/heartRateCB"
        android:layout_marginTop="61dp"
        android:text="Fullname: "
        android:textSize="14sp" />

    <TextView
        android:id="@+id/genderTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nameTV"
        android:layout_alignTop="@+id/textview5"
        android:text="TextView"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/heartRateCB"
        android:layout_alignTop="@+id/heightTV"
        android:text="Height: "
        android:textSize="12sp" />

</RelativeLayout>