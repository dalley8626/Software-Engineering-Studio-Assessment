<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataPacketActivity">

    <CheckBox
        android:id="@+id/heartRateCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView3"
        android:layout_marginBottom="186dp"
        android:text="Heart Rate" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/NameTV"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-49dp"
        android:text="Below are the information that will be sent to your doctor." />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Before ticking Heart Rate, you must go to Heart Rate and measure it first." />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="343dp"
        android:layout_height="32dp"
        android:layout_above="@+id/medicalDataET"
        android:layout_centerHorizontal="true"
        android:text="Include any other relevent medical data in the field below." />

    <EditText
        android:id="@+id/medicalDataET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="104dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/NameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/heartRateCB"
        android:layout_marginTop="58dp"
        android:text="Name"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/GenderTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/NameTV"
        android:layout_toEndOf="@+id/heartRateCB"
        android:text="Gender"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/heightTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/heartRateCB"
        android:layout_marginTop="110dp"
        android:text="Height"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/weightET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/heartRateCB"
        android:layout_marginTop="169dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="Weight" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="34dp"
        android:layout_marginStart="38dp"
        android:text="Save" />

    <Button
        android:id="@+id/sendBtn"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/saveBtn"
        android:layout_marginEnd="38dp"
        android:text="Save and Send" />

</RelativeLayout>